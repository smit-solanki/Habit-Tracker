<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_gradient">

    <!-- Central Content Container -->
    <LinearLayout
        android:id="@+id/contentGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <!-- Logo with a subtle shadow/elevation effect -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="App Logo"
            android:src="@drawable/splash_img"
            android:scaleType="centerInside"
            android:elevation="8dp" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:letterSpacing="0.05"
            android:text="Habit Tracker"
            android:textColor="@color/text_primary"
            android:textSize="40sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Master your habits daily"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginTop="24dp"
            android:background="@color/accent_primary" />

        <TextView
            android:id="@+id/motto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Small steps every day, Big Success"
            android:textColor="@color/accent_secondary"
            android:textSize="15sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="80dp"
        android:indeterminateTint="@color/accent_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Footer Branding -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="POWERED BY\nSMIT H. SOLANKI"
        android:textColor="@color/text_tertiary"
        android:textSize="10sp"
        android:letterSpacing="0.3"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


